# Sol OS MVP Environment Configuration
# Copy this file to .env and fill in the actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/sol_os_mvp

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-use-openssl-rand-hex-32
DATA_ENCRYPTION_MASTER_KEY=your-encryption-master-key-use-openssl-rand-hex-64

# OpenAI Configuration (for Sol's personality engine)
OPENAI_API_KEY=your-openai-api-key-here

# Application Configuration
ENVIRONMENT=development
DEBUG=true
API_HOST=localhost
API_PORT=8003

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security Headers
SECURE_COOKIES=false  # Set to true in production
HTTPS_ONLY=false      # Set to true in production

# Monitoring Configuration
ENABLE_METRICS=true
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
REFRESH_TOKEN_DAYS=30

# GDPR Configuration
DATA_RETENTION_DAYS=365
AUTO_DELETE_EXPIRED_DATA=false  # Set to true in production

# Additional Dependencies for MVP
REDIS_URL=redis://localhost:6379/0