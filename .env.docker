# Sol OS MVP Docker Environment Configuration
# Copy this file to .env for Docker Compose

# Security Keys (Generate secure random values)
JWT_SECRET_KEY=change-this-to-secure-random-key-generate-with-openssl-rand-hex-32
DATA_ENCRYPTION_MASTER_KEY=change-this-to-secure-random-key-generate-with-openssl-rand-hex-64

# OpenAI Configuration (Required for Sol's personality)
OPENAI_API_KEY=your-openai-api-key-here

# Docker Compose will use these ports
FRONTEND_PORT=3001
BACKEND_PORT=8004

# Environment
ENVIRONMENT=production
DEBUG=false